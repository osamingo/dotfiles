[user]
	name = SET_ME_LOCALLY
	email = SET_ME_LOCALLY

[init]
	templatedir = ~/.git_template

[core]
	excludesfile = ~/.gitignore
	pager = less -r
	editor = vim

[color]
	ui = auto

[alias]
  pl = pull --prune
	co = checkout
	cm = commit
	st = status
	br = branch
	hist = log --pretty=format:\\\"%h %ad | %s%d [%an]\\\" --graph --date=short
	tree = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
